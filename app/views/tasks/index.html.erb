<h1>TASKLIST</h1>

<section class="list">

  <div>
    <button id="add_new">
      <a href="/tasks/new">Add Task</a>
    </button>

    <button id="all_tasks">
      <a href="/tasks">All Tasks</a>
    </button>
  </div>

  <div class="list_title">
    <h3>YOUR TASKS</h3>
    <ol>
      <%@tasks.each do |task|%>
      <li class="items">
        <%= task.action %>
        <%= %>
        <%= link_to "(View details)", task_path(task.id) %>
        <%= link_to "(Delete)", task_path(task.id),method: :delete, data: { confirm: "Are you sure you want to delete this task?"}%>
      </li>
      <%end%>
    </ol>
  </div>
</section>
