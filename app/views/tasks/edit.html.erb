<%= form_with model: @task, class: 'edit_task' do |f| %>

<h2>Edit task</h2>

<div class="field">

<%=f.label :action%>
<%=f.text_field :action %>

<%=f.label :description%>
<%=f.text_field :description%>

<%=f.label :completion_date%>
<%=f.text_field :completion_date%>
</div>

<%=f.submit "Update Task", class: "button"%>
<%=f.submit "All Tasks", class: "button"%>

<!-- <button id="all_tasks">
  <a href="/tasks">All Tasks</a>
</button> -->
<% end %>
